<h1>Our Users</h1>
<table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
     </tr>
  </thead>
  <% if @user %>
    <% @user.each_with_index do |user,index| %>
      <tr>
        <td><%= index +1 %></td>
                
        <td><%= user.email %></td>          
      </tr>
    <% end %>    
  <% else %>
    <tr>
      <td colspan="2"><b>No records found!</b></td>
    </tr>
  <% end %>
</table>